<script src="skins/js/swiper.3.1.2.min.js"></script>
<script>
$(function(){	
	
		
	var NextBtn=$(".space1-RDown"),PrevBtn=$(".space1-RUp"),anyUl=$("#img_zhuzhai");
	var LiTotal=anyUl.find("li").length, RightLength=LiTotal-3,RightPicNum=RightLength;
	var liwidth=7.7,showTime=4000,step=0;
	var Auto=setInterval(AutoScroll,showTime);	
	
	 NextBtn.on('click',function(){
			if(RightPicNum>0){
				step-=liwidth;
				anyUl.css('-webkit-transform','translate(0,'+step+'rem)'); 
				RightPicNum--;
			}else{				
				anyUl.css('-webkit-transform','translate(0,0rem)'); 
				RightPicNum=RightLength;
				step=0;
			}
		});
		
	 PrevBtn.on('click',function(){
			if(RightPicNum==RightLength){
				anyUl.css('-webkit-transform','translate(0,-'+RightLength*liwidth+'rem)');
				RightPicNum=0;
				step=RightLength*liwidth;
			}
			else{
				step-=liwidth;
				anyUl.css('-webkit-transform','translate(0,-'+step+'rem)');
				RightPicNum++;
			}
		});
	function AutoScroll(){
		NextBtn.click();
	}	 
	
	
	var swiper = new Swiper('.swiper-container', {
		pagination: '.swiper-pagination',
		threshold:10,
		nextButton: '.ImgPopR',
		prevButton: '.ImgPopL',
		spaceBetween: 1 
	 });	 	
	 
	 $(".space1-RList ul li").on('click',function(){
		 $(".ImgPop,.fade").show(0);
		 swiper.update();
		 
	 });
	 
	 $(".ImgPopClose").on('touchstart',function(){
		 $(".ImgPop,.fade").hide();
	 });
	 
	 $(".homeLeft a").on('touchstart',function(){
		var hindex=$(this).index();
		$(".space1-RListMove ul").eq(hindex).show().siblings().hide();
		var ulId=$(".space1-RListMove ul").eq(hindex).attr("id");
		
		$(this).addClass('act').siblings().removeClass("act");	
		
		var bigsrc='';
		$(".swiper-wrapper li").remove();
		for(var a=0;a<$("#"+ulId).find("li").length;a++){
			bigsrc=$("#"+ulId).find("li").eq(a).find("img").attr("data-src");				
			$(".swiper-wrapper").append('<li class="swiper-slide"><img src="'+bigsrc+'" width="100%"/></li>');			
		}
		
		LiTotal=anyUl.find("li").length;
		RightLength=LiTotal-3;
		RightPicNum=RightLength;
		anyUl.css('-webkit-transform','translate(0,0rem)'); 
		
		
	});
	 
	
		
});
</script>

